<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qs_setting_height"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:background="@drawable/qs_carsetting">

        <Button
            android:id="@+id/carsetting_btn"
            android:layout_width="@dimen/qs_icon_width"
            android:layout_height="@dimen/qs_icon_btn_height"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|bottom"
            android:text="@string/qs_carsetting"
            android:textSize="18px"
            android:textAllCaps="false" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:background="@drawable/qs_volume_mode">

        <Button
            android:id="@+id/volume_mode_btn"
            android:layout_width="@dimen/qs_icon_width"
            android:layout_height="@dimen/qs_icon_btn_height"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|bottom"
            android:text="@string/qs_volume_mode"
            android:textSize="18px"
            android:textAllCaps="false" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:background="@drawable/qs_volume_value">

        <Button
            android:id="@+id/volume_value_btn"
            android:layout_width="@dimen/qs_icon_width"
            android:layout_height="@dimen/qs_icon_btn_height"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|bottom"
            android:text="@string/qs_volume_value"
            android:textSize="18px"
            android:textAllCaps="false" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:background="@drawable/qs_brightness">

        <Button
            android:id="@+id/brightness_btn"
            android:layout_width="@dimen/qs_icon_width"
            android:layout_height="@dimen/qs_icon_btn_height"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|bottom"
            android:text="@string/qs_brightness"
            android:textSize="18px"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/wifi_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:background="@drawable/qs_wifi_enable">

        <Button
            android:id="@+id/qs_wifi_btn"
            android:layout_width="@dimen/qs_icon_width"
            android:layout_height="@dimen/qs_icon_btn_height"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|bottom"
            android:text="@string/qs_wifi"
            android:textSize="18px"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bt_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1px"
        android:layout_marginEnd="1px"
        android:background="@drawable/qs_bt_enable">

        <Button
            android:id="@+id/qs_bt_btn"
            android:layout_width="@dimen/qs_icon_width"
            android:layout_height="@dimen/qs_icon_btn_height"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal|bottom"
            android:text="@string/qs_bt"
            android:textSize="18px"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </FrameLayout>
</LinearLayout>